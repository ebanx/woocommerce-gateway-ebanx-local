{
    "name": "ebanx/woocommerce-gateway-ebanx-local",
    "description": "This plugin enables you to integrate your WooCommerce store with the EBANX Pay payment gateway.",
    "type": "project",
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "require": {
        "php" : ">=5.6.0,<8.0.0-dev",
        "ebanx/benjamin-local": "^1.20"
    },
    "require-dev": {
        "exussum12/coverage-checker": "^0.11.2",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-all": "composer test && composer style-check",
        "style-check" : "phpcs -p -n --ignore=*/tests/*,./vendor/* --extensions=php ./"
    }
}
